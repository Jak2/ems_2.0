# Frontend Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# BACKEND API CONFIGURATION
# =============================================================================
# Backend API base URL
# Development: http://localhost:8000
# Production: https://api.yourdomain.com
VITE_API_BASE_URL=http://localhost:8000

# Backend API endpoints (optional - can be constructed from base URL)
VITE_API_UPLOAD_ENDPOINT=/api/upload-cv
VITE_API_CHAT_ENDPOINT=/api/chat
VITE_API_JOB_STATUS_ENDPOINT=/api/job

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Application title
VITE_APP_TITLE=ChatBot

# Application version
VITE_APP_VERSION=1.0.0

# Environment mode
VITE_ENVIRONMENT=development

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable debug mode (shows console logs)
VITE_DEBUG=true

# Enable file attachment preview
VITE_ENABLE_ATTACHMENT_PREVIEW=true

# Maximum file size for upload (in MB)
VITE_MAX_FILE_SIZE_MB=10

# Allowed file types (comma-separated MIME types)
VITE_ALLOWED_FILE_TYPES=application/pdf

# =============================================================================
# UI CONFIGURATION
# =============================================================================
# Theme mode (light, dark, auto)
VITE_THEME_MODE=light

# Enable dark mode toggle
VITE_ENABLE_DARK_MODE_TOGGLE=true

# Default language
VITE_DEFAULT_LANGUAGE=en

# =============================================================================
# POLLING CONFIGURATION
# =============================================================================
# Job status polling interval (milliseconds)
VITE_JOB_POLL_INTERVAL=1000

# Job status polling timeout (milliseconds)
VITE_JOB_POLL_TIMEOUT=60000

# =============================================================================
# ANALYTICS (optional - for future use)
# =============================================================================
# Google Analytics ID
VITE_GA_ID=

# Sentry DSN for error tracking
VITE_SENTRY_DSN=

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================
# Request timeout (milliseconds)
VITE_REQUEST_TIMEOUT=30000

# Retry attempts for failed requests
VITE_RETRY_ATTEMPTS=3

# Backend health check timeout (milliseconds)
VITE_HEALTH_CHECK_TIMEOUT=3000
